{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Profil{% endblock %}

{% block main %}
    <h2>{{ participant.name | upper }} {{ participant.firstName }}</h2>

    <div class="profile-pic">
        <img src="{{ asset('uploads/users/' ~ participant.profilPicture) }}"
             alt="photo de profil de {{ participant.firstName }}">
    </div>

    <div class="user-info">
        <p><strong>Prénom :</strong> {{ participant.firstName }}</p>
        <p><strong>Nom :</strong> {{ participant.name }}</p>
        <p><strong>Email :</strong> {{ participant.email }}</p>
        <p><strong>Téléphone :</strong> {{ participant.phoneNumber }}</p>
        <p><strong>Campus :</strong> {{ participant.campus.name }}</p>
    </div>

    <div class="events-container">
        <p><strong>Événements organisés :</strong></p>
        {% if events|length != 0 %}
            {% include 'event/event.html.twig' %}
        {% else %}
            <div class="event-date-container">
                <p>Cette personne n'est inscrite à aucun événement actuellement actif.</p>
            </div>
        {% endif %}
    </div>

    <div class="return">
        <a href="{{ path('event_list') }}">Retour</a>
    </div>

{% endblock %}