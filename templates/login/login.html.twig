{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Log in!{% endblock %}

{% block main %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnecter</a>
            </div>
        {% endif %}

        <h1>Veuillez vous identifier</h1>
        <div>
            <label for="username">Email </label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>
        </div>
        <div>
            <label for="password">Mot de passe </label>
            <input type="password" name="_password" id="password" autocomplete="current-password"
                   required>
        </div>
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection"
               value="{{ csrf_token('authenticate') }}">
        <div class="filters-checkboxes">
            <div>
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Se souvenir de moi</label>
            </div>
        </div>
        <button class="link-btn">
            S'identifier
        </button>

        <p><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a></p>
        <p>Pas de compte ? <a href="{{ path('app_register') }}">Inscrivez-vous dès maintenant</a> !</p>
    </form>
{% endblock %}
